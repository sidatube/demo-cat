<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>StudentCreate</servlet-name>
        <servlet-class>com.example.demo_cat.Controller.StudentCreate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentCreate</servlet-name>
        <url-pattern>/students/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetListStudents</servlet-name>
        <servlet-class>com.example.demo_cat.Controller.GetListStudents</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetListStudents</servlet-name>
        <url-pattern>/students</url-pattern>
    </servlet-mapping>
    <!--    Product-->
    <servlet>
        <servlet-name>GetListProducts</servlet-name>
        <servlet-class>com.example.demo_cat.Controller.product.GetListProducts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetListProducts</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ProductCreate</servlet-name>
        <servlet-class>com.example.demo_cat.Controller.product.ProductCreate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductCreate</servlet-name>
        <url-pattern>/products/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FindById</servlet-name>
        <servlet-class>com.example.demo_cat.Controller.product.FindById</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindById</servlet-name>
        <url-pattern>/products/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateProduct</servlet-name>
        <servlet-class>com.example.demo_cat.Controller.product.UpdateProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProduct</servlet-name>
        <url-pattern>/products/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteProduct</servlet-name>
        <servlet-class>com.example.demo_cat.Controller.product.DeleteProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProduct</servlet-name>
        <url-pattern>/products/delete</url-pattern>
    </servlet-mapping>
    <!--    Cart-->
    <servlet>
        <servlet-name>GetCart</servlet-name>
        <servlet-class>com.example.demo_cat.Controller.product.cart.GetCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCart</servlet-name>
        <url-pattern>/products/cart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddToCard</servlet-name>
        <servlet-class>com.example.demo_cat.Controller.product.cart.AddToCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCard</servlet-name>
        <url-pattern>/products/addToCart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateCart</servlet-name>
        <servlet-class>com.example.demo_cat.Controller.product.cart.UpdateCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCart</servlet-name>
        <url-pattern>/products/updateCart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteProductFromCart</servlet-name>
        <servlet-class>com.example.demo_cat.Controller.product.cart.DeleteProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductFromCart</servlet-name>
        <url-pattern>/products/removeCart</url-pattern>
    </servlet-mapping>

</web-app>